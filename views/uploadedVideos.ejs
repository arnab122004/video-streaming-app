<!DOCTYPE html>
<html lang="en">
<head>
  <meta charset="UTF-8">
  <meta name="viewport" content="width=device-width, initial-scale=1.0">
  <title>Your Uploaded Videos - <%= user.username %></title>
  <link rel="stylesheet" href="/css/style.css">

  <style>
    body {
      font-family: 'Segoe UI', Tahoma, Geneva, Verdana, sans-serif;
      margin: 0;
      padding: 20px;
      background-color: #f9f9f9;
      color: #333;
    }

    h1 {
      text-align: center;
      margin-bottom: 20px;
    }

    .video-grid {
      display: grid;
      grid-template-columns: repeat(auto-fill, minmax(240px, 1fr));
      gap: 20px;
    }

    .video-card {
      background: #fff;
      border-radius: 8px;
      overflow: hidden;
      box-shadow: 0 4px 8px rgba(0,0,0,0.1);
      transition: transform 0.2s ease;
    }

    .video-card:hover {
      transform: translateY(-3px);
    }

    .video-thumb {
      width: 100%;
      height: 150px;
      object-fit: cover;
      display: block;
      cursor: pointer;
    }

    .video-info {
      padding: 10px;
      text-align: center;
    }

    .video-title {
      font-size: 1rem;
      font-weight: 600;
      color: #007BFF;
      text-decoration: none;
    }

    .video-title:hover {
      text-decoration: underline;
    }

    .delete-link {
      display: inline-block;
      margin-top: 8px;
      font-size: 0.9rem;
      color: #f44336;
      text-decoration: none;
      cursor: pointer;
      transition: color 0.3s;
    }

    .delete-link:hover {
      color: #d32f2f;
      text-decoration: underline;
    }

    .empty-msg {
      text-align: center;
      color: #777;
      font-style: italic;
      margin-top: 40px;
    }

    a.back-link {
      display: inline-block;
      margin-top: 30px;
      text-decoration: none;
      color: #007BFF;
      font-weight: 500;
    }

    a.back-link:hover {
      text-decoration: underline;
    }
  </style>
</head>
<body>
  <%- include("partials/navbar") %>

  <h1>Your Uploaded Videos</h1>

  <% if (videos.length === 0) { %>
    <p class="empty-msg">You haven't uploaded any videos yet.</p>
  <% } else { %>
    <div class="video-grid" id="videoGrid">
      <% videos.forEach(video => { %>
        <div class="video-card" data-id="<%= video._id %>">
          <a href="/videos/watch/<%= video._id %>">
            <img src="<%= video.thumbnailUrl %>" alt="<%= video.title %>" class="video-thumb">
          </a>
          <div class="video-info">
            <a href="/videos/watch/<%= video._id %>" class="video-title"><%= video.title %></a><br>
            <a href="#" class="delete-link" onclick="deleteVideo('<%= video._id %>', event)">Delete</a>
          </div>
        </div>
      <% }) %>
    </div>
  <% } %>


  <script>
    // Delete video dynamically via fetch
    async function deleteVideo(videoId, event) {
      event.preventDefault();

      if (!confirm("Are you sure you want to delete this video?")) return;

      try {
        const res = await fetch(`/user/delete-video/${videoId}`, {
          method: "POST"
        });

        if (res.ok) {
          // Remove video card from DOM
          const card = document.querySelector(`[data-id='${videoId}']`);
          card.remove();
          
          // If no videos left, show empty message
          if (document.querySelectorAll(".video-card").length === 0) {
            document.getElementById("videoGrid").outerHTML =
              '<p class="empty-msg">You haven\'t uploaded any videos yet.</p>';
          }
        } else {
          alert("Failed to delete video.");
        }
      } catch (err) {
        console.error(err);
        alert("An error occurred while deleting the video.");
      }
    }
  </script>
</body>
</html>
